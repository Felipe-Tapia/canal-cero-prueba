{
  "footer": {
    "blocks": ["footer-layout.desktop", "footer-layout.mobile"]
  },
  "footer-layout.desktop": {
    "children": [
      "flex-layout.row#footer-2-desktop",
      "flex-layout.row#footer-1-desktop"
    ]
  },
  "flex-layout.row#footer-1-desktop": {
    "children": [
      "vtex.menu@2.x:menu#Products",
      "footer-spacer",
      "social-networks"
    ],
    "props": {
      "blockClass": "menu-row",
      "paddingTop": 6,
      "paddingBottom": 3
    }
  },

  "social-networks": {
    "props": {
      "socialNetworks": [
        {
          "name": "Facebook",
          "url": "https://www.facebook.com/vtexonline/"
        },
        {
          "name": "Instagram",
          "url": "https://www.instagram.com/vtextruecloud/"
        },
        {
          "name": "Twitter",
          "url": "https://twitter.com/vtexonline"
        }
      ]
    }
  },

  "flex-layout.row#footer-2-desktop": {
    "children": ["image#footer-img"],
    "props": {
      "blockClass": "footer-imgs"
    }
  },

    "image#footer-img": {
        "title": "IMAGEN FOOTER",
        "props": {
            "src": "/arquivos/healthicons_dhis2-logo.png",
            "alt": "IMAGEN FOOTER",
            "link": {
                "url": "#",
                "newTab": false
            },
            "blockClass": "footer-img"
        }
    },


  "footer-layout.mobile": {
    "children": [
      "flex-layout.row#2-footer-mobile",
      "flex-layout.row#1-footer-mobile",
      "flex-layout.row#3-footer-mobile"
    ]
  },
  "flex-layout.row#2-footer-mobile": {
    "children": ["image#footer-img"],
    "props": {
      "blockClass": "footer-imgs",
      "paddingTop": 4,
      "paddingBottom": 4
    }
  },

  "flex-layout.row#1-footer-mobile": {
    "props": {
      "paddingTop": 6,
      "paddingBottom": 7
    },
    "children": ["vtex.menu@2.x:menu#footer-mobile"]
  },
  
  "flex-layout.row#3-footer-mobile": {
    "children": ["social-networks"],
    "props": {
      "blockClass": "credits"
    }
  }
}
